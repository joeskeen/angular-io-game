{
  "name": "angular-io-game-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "init": "ngrok authtoken",
    "build": "tsc",
    "postbuild": "cd src/client ; npm run build",
    "watch": "tsc -w --preserveWatchOutput",
    "local": "nodemon",
    "prestart": "npm run build",
    "start": "concurrently -n tsc,node,ng 'npm:watch' 'npm:local' 'cd src/client ; npm run watch'",
    "prestart:internet": "npm run build",
    "start:internet": "concurrently -n start,ngrok 'npm:start' 'ngrok http 3000'",
    "postinstall": "cd src/client ; npm install ; cd .. ; vercel"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.1",
    "socket.io": "^4.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.6",
    "concurrently": "^7.3.0",
    "ngrok": "^4.3.3",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
